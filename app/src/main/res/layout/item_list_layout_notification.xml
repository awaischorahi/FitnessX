<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">
<ImageView
    android:layout_width="50dp"
    android:src="@drawable/lunch"
    android:id="@+id/notification_image_item"
    android:layout_height="50dp"/>
    <TextView
        android:layout_toRightOf="@id/notification_image_item"
        android:id="@+id/notification_titleview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins"
        android:text="Hey, it's time for lunch"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_toRightOf="@id/notification_image_item"
        android:id="@+id/time_textview_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_titleview"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins"
        android:text="about 1 minute ago"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>