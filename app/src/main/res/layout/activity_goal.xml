<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ProfileDetails.GoalActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/goal_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins"
                android:text="What is your Goal"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/help_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/goal_textview"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins"
                android:text="It will help us to know more about you!"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_confirm_goal"
                android:layout_width="match_parent"
                android:layout_height="490dp"
                android:layout_below="@id/help_textview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:foregroundGravity="center"
                android:layout_marginBottom="4dp"
                tools:listitem="@layout/goal_item_list" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirm_goal"
                android:layout_width="315dp"
                android:layout_height="48dp"
                android:layout_below="@+id/recyclerview_confirm_goal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/btn_background_register"
                android:text="Confirm"
                android:textColor="#fff" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>