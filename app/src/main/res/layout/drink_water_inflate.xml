<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idCartProductCardView"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_gravity="center_vertical"
    android:layout_margin="20dp"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    app:cardElevation="40dp"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/idPopupImageSuccessfulPopup"
            android:layout_width="222dp"
            android:layout_height="221dp"
            android:layout_margin="4dp"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/animation" />

        <TextView
            android:id="@+id/idTextOrderSuccessSuccessfulPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idPopupImageSuccessfulPopup"
            android:layout_centerHorizontal="true"
            android:text="Water Hydration Alert"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/water_show_Textview"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTextOrderSuccessSuccessfulPopup"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxLines="2"
            android:textSize="14sp"
            android:text="Have you Drink water?"></TextView>

        <Button
            android:id="@+id/btn_check_drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/water_show_Textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:text="Yes" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
